# ストレージプロバイダー選択 ('firebase' | 'r2')
NEXT_PUBLIC_STORAGE_PROVIDER=r2

# Firebase設定
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Cloudflare R2設定
# S3 API URL: https://e22c39eaf7b2b1c3a4be2a106de7301e.r2.cloudflarestorage.com/emolink-cms
NEXT_PUBLIC_R2_ACCOUNT_ID=e22c39eaf7b2b1c3a4be2a106de7301e
NEXT_PUBLIC_R2_BUCKET_NAME=emolink-cms
NEXT_PUBLIC_R2_PUBLIC_DOMAIN=https://pub-37ae162e31ea48cca3c6693aaff3b655.r2.dev
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key

# 認証設定
NEXT_PUBLIC_CLAIM_CONTINUE_URL=http://localhost:3000/claim

# reCAPTCHA設定（LP用）
VITE_RECAPTCHA_SITE_KEY=your-recaptcha-site-key

# CMS API設定（LP用）
VITE_CMS_API_BASE=https://region-project.cloudfunctions.net

# Functions設定（バックエンド用）
RECAPTCHA_SECRET=your-recaptcha-secret
APP_CLAIM_CONTINUE_URL=http://localhost:3000/claim
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
JWT_SECRET=your-jwt-secret-key
SENDGRID_API_KEY=your-sendgrid-api-key

# メール設定
MAIL_FROM=noreply@example.com
MAIL_FROM_NAME=CMS
GMAIL_USER=your-gmail@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# Stripe設定
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# アプリケーションのベースURL（固定ドメイン、NFCタグ用に一貫性を保つ）
# 開発環境: http://localhost:3000
# 本番環境: https://emolink-cms.web.app
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 開発環境設定
NODE_ENV=development

# 開発用パスワード認証（LPからの送信以外の開発時用）
NEXT_PUBLIC_DEV_PASSWORD=dev1234

# 開発用メール認証（開発環境でのみ有効、本番では無効化推奨）
NEXT_PUBLIC_ENABLE_DEV_EMAIL_AUTH=true
